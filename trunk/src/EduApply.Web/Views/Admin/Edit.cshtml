@using System.Activities.Expressions
@model EduApply.Web.Models.CreateAdminModel
@{
    ViewBag.Title = "Edit User";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@Html.ValidationSummary(false)
@*<h2>Edit User</h2>*@

@using (Html.BeginForm())
{
    @Html.HiddenFor(x => x.Id)
    <hr/>
    <div class="form-group required">
        <div class="row">
            <label class="col-md-2 control-label">Phone Number</label>
            <div class="col-md-4">
                @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control default-width" })
                @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="form-group required">
        <div class="row">
            <label class="col-md-2 control-label">Email</label>
            <div class="col-md-4">
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control default-width", disabled = "disabled" })
            </div>
        </div>
    </div>
    <div class="form-group required">
        <div class="row">
            <label class="col-md-2 control-label">Role</label>
            <div class="col-md-4">
                @Html.DropDownListFor(x => x.UserRole, new SelectList(Model.AdminRoles, "Name", "Name", Model.UserRole), "<--Select-->", new { @class = "form-control default-width" })
                @Html.ValidationMessageFor(model => model.UserRole, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

