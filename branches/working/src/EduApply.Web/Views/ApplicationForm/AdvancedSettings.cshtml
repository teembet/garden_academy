            </div>*@
        @Html.HiddenFor(model => model.Id)
        <div class="form-group">
            @Html.LabelFor(model => model.AllowMultipleApplications, new { @class = "control-label col-md-3" })
            <div class="col-md-3">
                <div class="checkbox">
                    @Html.CheckBoxFor(model => model.AllowMultipleApplications)
                </div>
            </div>

            @Html.LabelFor(model => model.AllowJambResultPrinting, new { @class = "control-label col-md-3" })
            <div class="col-md-3">
                <div class="checkbox">
                    @Html.CheckBoxFor(model => model.AllowJambResultPrinting)
                </div>
            </div>

        </div>
        <hr />
        <div class="form-group">
            @Html.LabelFor(model => model.AllowAppResultPrinting, new { @class = "control-label col-md-3" })
