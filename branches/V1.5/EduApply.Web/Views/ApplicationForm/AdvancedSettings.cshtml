@model EduApply.Web.Models.ApplicationFormModel

@{
    ViewBag.Title = "Advanced Settings";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@*<h2>Advanced Settings</h2>*@

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>@Model.Name</h4>
        <hr />
        @Html.ValidationSummary(true)
        @*<div class="form-group">
                @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Name)
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
            </div>*@
        @Html.HiddenFor(model => model.Id)
        <div class="form-group">
            @Html.LabelFor(model => model.AllowMultipleApplications, new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                <div class="checkbox">
                    @Html.CheckBoxFor(model => model.AllowMultipleApplications)
                </div>
            </div>

        </div>

        <hr />

        <div class="form-group">
            @Html.LabelFor(model => model.AllowJambResultPrinting, new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                <div class="checkbox">
                    @Html.CheckBoxFor(model => model.AllowJambResultPrinting)
                </div>
            </div>
        </div>
        <hr />
        <div class="form-group">
            @Html.LabelFor(model => model.AllowAppResultPrinting, new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                <div class="checkbox">
                    @Html.CheckBoxFor(model => model.AllowAppResultPrinting)
                </div>
            </div>
        </div>

        <hr />

        <div class="form-group">
            @Html.LabelFor(model => model.AllowNonAppResultPrinting, new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                <div class="checkbox">
                    @Html.CheckBoxFor(model => model.AllowNonAppResultPrinting)
                </div>
            </div>

        </div>
        <hr />

        <div class="form-group">
            @Html.LabelFor(model => model.AllowAdmissionLetterPriniting, new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                <div class="checkbox">
                    @Html.CheckBoxFor(model => model.AllowAdmissionLetterPriniting)
                </div>
            </div>

        </div>

        <hr />
        <div class="form-group">
            @Html.LabelFor(model => model.AllowApplicationFormPrinting, new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                <div class="checkbox">
                    @Html.CheckBoxFor(model => model.AllowApplicationFormPrinting)
                </div>
            </div>

        </div>
        <hr />

        <div class="form-group">
            @Html.LabelFor(model => model.AllowPhotoCardPrinting, new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                <div class="checkbox">
                    @Html.CheckBoxFor(model => model.AllowPhotoCardPrinting)
                </div>
            </div>

        </div>
        <hr />
        <div class="form-group">
            @Html.LabelFor(model => model.AllowApplicationEditAfterSubmission, new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                <div class="checkbox">
                    @Html.CheckBoxFor(model => model.AllowApplicationEditAfterSubmission)
                </div>
            </div>

        </div>
        <hr />
        <div class="panel panel-primary">
            <div class="panel-heading">Application Forms</div>
            <table class="table table-striped" id="mappedFormTable">
                <thead>
                    <tr><th>S/N</th><th>Application Form</th><th>Map To Form</th></tr>
                </thead>
                <tbody>
                    @if (Model.ApplicationForms.Any())
                    {
                        var counter = 1;
                        foreach (var item in Model.ApplicationForms)
                        {
                            <tr>
                                <td>@counter</td>
                                <td>@item.Name</td>
                                <td>
                                    @if (Model.MappedFormIdsForThisForm.Any())
                                    {
                                        if (Model.MappedFormIdsForThisForm.Contains(@item.Id))
                                        {
                                            <input type="checkbox" value="@item.Id" checked="" name="MappedFormIds" />
                                        }
                                        else
                                        {
                                            <input type="checkbox" value="@item.Id" name="MappedFormIds" />
                                        }
                                    }
                                    else
                                    {
                                        <input type="checkbox" value="@item.Id" name="MappedFormIds" />
                                    }
                                </td>
                            </tr>
                                    counter++;
                        }

                    }
                   
                </tbody>
            </table>

        </div>
        <hr />
        <div class="panel panel-primary">
            <div class="panel-heading">Program Courses</div>
            <table class="table table-striped" id="programCourseTable2">
                <thead>
                    <tr><th>S/N</th><th>Program</th><th>Course</th><th>Add To Form</th></tr>
                </thead>
                <tbody>
                    @if (Model.ProgramCourses.Any())
                    {
                        var counter = 1;
                        foreach (var item in Model.ProgramCourses)
                        {
                    <tr>
                        <td>@counter</td>
                        <td>@item.Program.Code</td>
                        <td>@item.Course.Name</td>
                        <td>
                            @if (Model.ProgramCourseIdsForThisForm.Any())
                                    {
                                        if (Model.ProgramCourseIdsForThisForm.Contains(@item.Id))
                                        {
                                    <input type="checkbox" value="@item.Id" checked="" name="ProgramCourseIds" />
                                        }
                                        else
                                        {
                                    <input type="checkbox" value="@item.Id" name="ProgramCourseIds" />
                                        }
                                    }
                                    else
                                    {
                                    <input type="checkbox" value="@item.Id" name="ProgramCourseIds" />
                                    }
                        </td>
                    </tr>
                                    counter++;
                        }

                    }
                    else
                    {
                    <tr><td colspan="4">No Program Course to display</td></tr>
                    }
                </tbody>
            </table>

        </div>
        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" value="Save" class="btn btn-success" />
                @Html.ActionLink("Cancel", "Edit", new { @appId = Model.Id }, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}

<script>
    $(function () {
        $('#programCourseTable2').DataTable();
        $('#mappedFormTable').dataTable();
    });
</script>
