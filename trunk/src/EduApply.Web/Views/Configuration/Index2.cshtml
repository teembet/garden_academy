
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Configuration</h2>
@*<div class="alert alert-info">
    This module is under construction
</div>*@

<div class="row">
    <article class="col-lg-offset-1 col-sm-offset-1 col-lg-8 col-sm-7 col-lg-push-3 col-sm-push-4">
        <div class="tab-content">
            <div id="faculty" class="tab-pane fade active in">
                @Html.Partial("~/Views/Faculty/_FacultyIndex.cshtml")

            </div>
            <div id="department" class="tab-pane fade in">
                @Html.Partial("~/Views/Department/_DepartmentIndex.cshtml")
            </div>
            <div id="course" class="tab-pane fade in">
                @Html.Partial("~/Views/Course/_CourseIndex.cshtml")
            </div>

        </div>
    </article>
    <aside class="col-lg-3 col-sm-4 col-lg-pull-9 col-sm-pull-8">
        <ul class="nav nav-pills nav-stacked">
            <li class="active"><a href="#faculty" data-toggle="tab">Facult</a></li>
            <li><a href="#department" data-toggle="tab">Department</a></li>
            <li><a href="#course" data-toggle="tab">Course</a></li>
        </ul>
    </aside>
</div>

<script>
        $(function () {
            $('.nav-stacked a:first').tab('show');
        });
</script>