@using EduApply.Data.Entities
@using EduApply.Logic.Interfaces
@using EduApply.Logic.Service
@model EduApply.Web.Models.ValidateAdmissionStatusModel
@{
    ViewBag.Title = "Check Admission Status";
    Layout = "~/Views/Shared/ApplicationLayout.cshtml";
    bool isAdmitted = false;
    var appFormservice = EngineContext.Resolve<IApplicationFormRepository>();
    var applicationFormWorkFlow = appFormservice.GetFirstApplicationFormWorkFlow(Convert.ToInt32(Session["AppFormId"]));
    var workFlow = appFormservice.GetWorkFlowItem(applicationFormWorkFlow.WorkFlowId);
}

<div class="container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Enter your application number or registration number below then click submit to check your admission status.</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger alert alert-danger" })
            @if (ViewData["IsAdmitted"] != null)
            {
                isAdmitted = Convert.ToBoolean(ViewData["IsAdmitted"]);
                if (isAdmitted)
                {
                    <div class="alert alert-success alert-dismissible">
                        <p>
                            Congratulations, You have been admitted to study <strong>@Model.CourseName (@Model.ProgramCode)</strong>  @if ((Session["ApplicationForm"] as ApplicationForm).AllowAdmissionLetterPriniting)
                            {<span>, click @Html.ActionLink("HERE", "PrintAdmissionLetter", "Validation", new { appNumOrRegNum = Model.AppNumOrRegNum ?? "" }, null) to print your admission Letter</span>}
                        </p>
                    </div>
                }
                else
                {
                    <div class="alert alert-info alert-dismissible">
                        <p>We are sorry, you have not been admitted</p>
                    </div>
                }
            }
            @*<div class="form-group">
                    @Html.LabelFor(model => model.AppNum, new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        <input type="text" value="@Model.AppNum" class="form-control" name="AppNum" id="txtAppNum" />
                        @Html.ValidationMessageFor(model => model.AppNum)
                    </div>
                    @Html.LabelFor(model => model.RegNum, new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        <input type="text" value="@Model.RegNum" class="form-control" name="RegNum" id="txtRegNum" />
                        @Html.ValidationMessageFor(model => model.RegNum)
                    </div>

                </div>*@

            <div class="form-group">
                @Html.LabelFor(model => model.AppNumOrRegNum, new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.AppNumOrRegNum, new { @class = "form-control default-width" })
                    @Html.ValidationMessageFor(model => model.AppNumOrRegNum)
                </div>

            </div>


            <div class="form-group">
                <div class="col-md-offset-3 col-md-9">
                    @if (!workFlow.Name.Equals("Validate Admission Status"))
                    {
                        @Html.ActionLink("<< Back", "BackApplication", "Application", null, new { @class = "btn btn-default" })
                    }
                    <input type="submit" value="Submit" class="btn btn-primary" id="admissionChecker" />
                    @Html.ActionLink("Continue", "ContinueFromAdmStatus", new { admitted = isAdmitted }, new { @class = "btn btn-success" })
                </div>
            </div>
        </div>
    }
</div>

