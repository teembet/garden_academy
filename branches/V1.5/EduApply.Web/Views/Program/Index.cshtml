@model IEnumerable<EduApply.Web.Models.ProgramModel>

@{
    ViewBag.Title = "Program Configuration";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@*<h2>Program Configuration</h2>*@
<hr />
<div class="row">

    <div class="col-md-12">
        <ul class=" nav nav-tabs">
            <li>@Html.ActionLink("Session", "Index", "Session")</li>
            <li class="active">@Html.ActionLink("Program", "Index", "Program")</li>
            <li>@Html.ActionLink("Faculty", "Index", "Faculty")</li>
            <li>@Html.ActionLink("Department", "Index", "Department")</li>
            <li>@Html.ActionLink("Course of Study", "Index", "Course")</li>
            <li>@Html.ActionLink("Venue", "Index", "Venue")</li>
            <li>@Html.ActionLink("Exam Venue", "Index", "ExamVenue")</li>
            <li>@Html.ActionLink("Venue Mapping", "Mapper", "VenueMapping")</li>
        </ul>
    </div>

    <div class="col-md-12 margin-top">
        <div class="form-group">
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
        </div>
        <div class="panel panel-primary">
            <div class="panel-heading">Program List</div>
            <table id="ProgramTable" class="table-striped">
                <thead>
                    <tr>
                        <th class="color-grey">S/N</th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Code)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IsActive)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        var i = 1;
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@i</td>
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    @item.Code
                                </td>
                                <td>
                                    @item.IsActive
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { programId = item.Id }, new { @class = "btn btn-success btn-xs" })
                                    @*@Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary" })*@
                                    @*@Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                                </td>
                            </tr>
                            i++;
                        }

                    }
                </tbody>



            </table>
        </div>
    </div>


</div>

<script type="text/javascript">
    $(function () {
        $("#ProgramTable").DataTable();
        toastr.options =
        {
            "closeButton": false,
            "debug": false,
            "progressBar": false,
            "positionClass": "toast-top-center",
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        };
    })
</script>

@if (TempData["Created"] != null && TempData["Created"].ToString() == "Success")
{
    <script type="text/javascript">
        $(function () {
            toastr.success("Program Successfully Created");
        })
    </script>
}
@if (TempData["Edited"] != null && TempData["Edited"].ToString() == "Success")
{
    <script type="text/javascript">
        $(function () {
            toastr.success("Program Details Successfully Changed");
        })
    </script>
}
