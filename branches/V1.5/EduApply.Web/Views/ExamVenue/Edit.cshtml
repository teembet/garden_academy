@model EduApply.Web.Models.ExamVenueModel

@{
    ViewBag.Title = "Exam Venue Configuration";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-12">
            <ul class="nav nav-tabs">
                <li>@Html.ActionLink("Session", "Index", "Session")</li>
                <li>@Html.ActionLink("Program", "Index", "Program")</li>
                <li>@Html.ActionLink("Faculty", "Index", "Faculty")</li>
                <li>@Html.ActionLink("Department", "Index", "Department")</li>
                <li>@Html.ActionLink("Course of Study", "Index", "Course")</li>
                <li>@Html.ActionLink("Venue", "Index", "Venue")</li>
                <li class="active">@Html.ActionLink("Exam Venue", "Index", "ExamVenue")</li>
                <li>@Html.ActionLink("Venue Mapping", "Mapper", "VenueMapping")</li>
            </ul>
        </div>

        <div class="col-md-12 margin-top">
            <div class="form-horizontal">
                <h4>Edit</h4>
                <hr />
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.Id)

                <div class="form-group">
                    @Html.LabelFor(model => model.VenueId, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.VenueId, new SelectList(Model.Venues, "Id", "Name"), "<--Select-->", new { @class = "form-control default-width" })
                        @Html.ValidationMessageFor(model => model.VenueId)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ExamDate, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.ExamDate, Model.ExamDate.ToString("dd-MMM-yyyy"), new { @class = "form-control custom-disable-textbox", @readonly = true })
                        @Html.ValidationMessageFor(model => model.ExamDate)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10 col-md-offset-2">
                        <div class="checkbox">
                            @Html.CheckBoxFor(model => model.IsActive)
                            @Html.LabelFor(model => model.IsActive)
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-primary" />
                        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-danger" })
                    </div>
                </div>
            </div>
        </div>

    </div>


}
<script>
    $(function () {
        $('#ExamDate').datetimepicker({
            showOn: "button",
            buttonImage: "/EduApply/images/calendar.gif",
            //buttonImage: "/images/calendar.gif",
            buttonImageOnly: true,
            buttonText: "Select date",
            dateFormat: 'dd-M-yy',
            changeMonth: true,
            changeYear: true,
            yearRange: '1960:2060',
            defaultDate: 'Date.today()'
        });

    });
</script>