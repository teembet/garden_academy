@model EduApply.Web.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
    Layout = "~/Views/Shared/_PlainLayout.cshtml";
}

<h2 style="float:left">@ViewBag.Title</h2>
<br /> <hr />
@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    
    <div class="boundary">
        <h4 style="float:left; color:green">Enter your registered email address.</h4>
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger alert alert-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
            <div class="col-md-6">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-success" value="Send Email" />
                @Html.ActionLink("Cancel", "Login", "Account", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
