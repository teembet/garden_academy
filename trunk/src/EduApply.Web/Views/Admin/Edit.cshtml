            </div>
        }*@


    <div class="form-group">
        <div class="row">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary">Save</button>
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
               </div>
            </div>
        </div>
                
